<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#20000000"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:src="@drawable/event50p" />

        <TextView
            android:id="@+id/clicktosee50pproposedtalks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="22dp"
            android:text="Proposed Talks"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/separatetalkview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FF4500"
            android:clickable="true"
            android:text="View Schedule"
            android:textColor="#ffffff"

            />

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/CardView50p"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#10000000"


                />
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="22dp"
            android:text="Get Direction"
            android:textSize="20sp"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp">

            <com.google.android.gms.maps.MapView

                android:id="@+id/mapView50p"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Buy50pTickets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FF4500"
                android:clickable="true"
                android:text="Buy Tickets"
                android:textColor="#ffffff" />


            <Button
                android:id="@+id/viewschedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FF4500"
                android:clickable="true"
                android:text="View Schedule"
                android:textColor="#ffffff"

                />
        </LinearLayout>

    </LinearLayout>


</ScrollView>






