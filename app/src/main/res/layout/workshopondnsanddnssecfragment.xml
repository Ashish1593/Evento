<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkshoponDNSandDNSSEC">

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkshoponDNSandDNSSEC"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/dnsanddnssec"
        android:id="@+id/DNSandDNSSECimageView"
        android:scaleType="fitXY"
        />


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Get Direction"
        android:gravity="center"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="12dp"
        />
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapViewDns"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="About Workshop"
        android:gravity="center"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="12dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/aboutDNSandDNSSEC"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Why Attend"
        android:gravity="center"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="12dp"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/whyattend"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Who is it for"
        android:gravity="center"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="12dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/whoisitfor"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <Button
        android:id ="@+id/BuyDNSTicket"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="BuyTicket"
        android:textColor="#ffffff"
        android:background="#FF4500"

    />
</LinearLayout>
</ScrollView>