<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent" >


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#20000000">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/pycon"
        android:scaleType="fitXY"
        />


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="About Pycon"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="1dp"

        />
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/aboutPycon"
            android:textColor="#000000"
            android:lineSpacingExtra="5dp"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            />
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proposed Talks"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:id="@+id/clicktoseepyconproposedtalks"
        android:textStyle="bold"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="1dp"
        />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <android.support.v7.widget.RecyclerView
            android:background="#10000000"
            android:id="@+id/CardViewPycon"
            android:layout_width="match_parent"
            android:layout_height="200dp"


            />
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Get Direction"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="1dp"
        />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp">
        <com.google.android.gms.maps.MapView

            android:id="@+id/mapViewPycon"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

    </android.support.v7.widget.CardView>

    <Button

        android:id="@+id/BuyPyconTickets"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Buy Ticket"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:background="#FF4500"

        android:clickable="true"
        />

    <!--<FrameLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:id="@+id/proposedTalksFossMeet"-->
    <!--/>-->
</LinearLayout>


</ScrollView>



